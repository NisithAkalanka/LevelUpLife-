<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.MoodFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_mood"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_toolbar_bg"
            app:title="@string/mood_title"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:menu="@menu/mood_journal_menu" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_mood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/dashboard_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Summary card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tv_today_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recent_moods"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_today_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_are_you_feeling"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Emoji chips (Unicode, no images) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips_emojis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:tag="Happy"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜ Neutral"
                android:checkable="true"
                android:tag="Neutral"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜” Sad"
                android:checkable="true"
                android:tag="Sad"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_calm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§˜ Calm"
                android:checkable="true"
                android:tag="Calm"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_excited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤© Excited"
                android:checkable="true"
                android:tag="Excited"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_stressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜µâ€ðŸ’« Stressed"
                android:checkable="true"
                android:tag="Stressed"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- Optional note -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_mood_note"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_add_note">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Context tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipgroup_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_work"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_study"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_health"
                android:checkable="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_family"
                android:checkable="true"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_log_mood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_log_mood"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/btn_clear"
                style="?attr/materialButtonOutlinedStyle"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_recent_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_moods"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tv_empty_moods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/empty_moods"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mood_history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>